# Docker Environment Configuration for Let'sDraw
# Copy this to .env when running with Docker

# Server Configuration
NODE_ENV=production
PORT=3000

# Timer Configuration (in seconds)
TIMER=300

# Canvas Configuration
CANVAS_WIDTH=3800
CANVAS_HEIGHT=2000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Security Configuration
HELMET_ENABLED=true

# Docker-specific Configuration
# Uncomment and set these for production
# NGINX_PORT=80
# NGINX_SSL_PORT=443

# Database Configuration (if adding persistent storage)
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=letsdraw
# DB_USER=letsdraw
# DB_PASSWORD=

# Monitoring Configuration
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json